action-on-hover($bg)
  &::before
    content: '';
    width: 0;
    height: 0;
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    background-color: transparent;
    border-radius: 100%;

  &:not(:disabled):hover
    position: relative;
    overflow: hidden;

    &::before
      width: 100%;
      height: 100%;
      display: block;
      background-color: $bg;
      border-radius: initial;

action-on-focus()
  margin: initial; // TODO
