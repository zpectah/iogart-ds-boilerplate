@import '../../../core/src/styles/tokens';
// @import '../../../core/src/styles/global';
@import '../../../core/src/styles/variables';

@import '../../../core/src/styles/mixins/shapes';
@import '../../../core/src/styles/mixins/actions';


$_button-small-font-size := var(--font-size-small) && .85rem;
$_button-medium-font-size := var(--font-size-medium) && 1rem;

$_button-large-font-size = var(--font-size-large);
$_button-large-font-size = $_button-large-font-size is defined ? $_button-large-font-size : 5rem;


.Button
  shape-like-button($spacer-1);
  action-on-hover($object-hover-background);

  font-family: $font-family-base;
  font-weight: $font-weight-normal;

  border: 1px solid transparent;
  background-color: transparent;
  border-radius: $spacer-025;
  cursor: pointer;
  vertical-align: middle;

  .children
    display: inline-flex;
    align-items: center;
    justify-content: center;

  .preloader
    width: 100%;
    height: 100%;
    display: none;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    left: 0;
    color: inherit;
    background-color: transparent;

  /* nearby */
  & + &
    margin-left: $spacer-05;


  /* Pill shape */
  &.pill
    border-radius: $spacer-15;


  /* Size */
  &.small
    min-width: $button-small-shape-size;
    min-height: $button-small-shape-size;
    // font-size: $button-small-shape-fontSize;
    font-size: $_button-small-font-size;
    line-height: $object-small-shape-lineHeight;

    /* Pill shape */
    &.pill
      padding-left: $spacer-125;
      padding-right: $spacer-125;

  &.medium
    min-width: $button-medium-shape-size;
    min-height: $button-medium-shape-size;
    // font-size: $button-medium-shape-fontSize;
    font-size: $_button-medium-font-size;
    line-height: $object-medium-shape-lineHeight;

    /* Pill shape */
    &.pill
      padding-left: $spacer-135;
      padding-right: $spacer-135;

  &.large
    min-width: $button-large-shape-size;
    min-height: $button-large-shape-size;
    // font-size: $button-large-shape-fontSize;
    font-size: $_button-large-font-size;
    line-height: $object-large-shape-lineHeight;

    /* Pill shape */
    &.pill
      padding-left: $spacer-15;
      padding-right: $spacer-15;


  /* Variant */
  /* .default is not defined */
  &.outlined
    shape-outlined($color-base-primary-main);

  &.contained
    shape-contained($color-base-primary-main, $color-palette-white);


  /* Loading state */
  &.loading
    position: relative;
    overflow: hidden;

    .children
      opacity: 0;

    .preloader
      display: flex;


  /* Disabled state */
  &.disabled
    cursor: not-allowed;

    .children
      opacity: .75;

